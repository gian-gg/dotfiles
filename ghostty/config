term = xterm-256color

macos-icon = xray
macos-titlebar-style = tabs

font-family = "Dank Mono"
font-thicken = true
font-size = 16

mouse-hide-while-typing = true

window-decoration = true
window-save-state = always

# keybinds
keybind = global:cmd+f20=toggle_quick_terminal
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = cmd+h=previous_tab
keybind = cmd+l=next_tab

keybind = super+ctrl+h=resize_split:left,10
keybind = super+ctrl+j=resize_split:down,10
keybind = super+ctrl+k=resize_split:up,10
keybind = super+ctrl+l=resize_split:right,10

# Background & transparency (matte dark, frosted look)
background = 101010
background-opacity = 0.4
background-blur-radius = 80

# Foreground (text color)
foreground = #c0caf5
cursor-color = #c0caf5
selection-background = #33467c
